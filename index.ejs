    <form action="/submit" method="post">
        <h1 class="random">Random Image generator</h1>
    <div class="ranimg">
        <img src="https://picsum.photos/<%= wone %>/<%= hone %>" alt="random image">
    </div>
    <br>
    <label >Enter the width:</label>
    <input type="number" name="won">
    <br>
    <label >Enter the Height:</label>
